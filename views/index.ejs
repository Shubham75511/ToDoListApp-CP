  <%- include("partials/header.ejs") %>
<section id="notepad">
  <div class="content">
    <div class="top">
      <h1 id="demo"></h1>
    </div>
    <div class="middle">
       <% if(currentpage === "/personal") { %> 
          <form action="/personal" method="POST" class="formtype">
          <% } else { %>
          <form action="/work" method="POST" class="formtype">
          <% } %>
          <input class="form-control" type="text" name="newItem" placeholder="Click to type...">
          <input type="submit" value="+" class="btn">
          <%event.preventDefault(); %>
      </form>
      <div class="list">
        <ul class="list-unstyled mt-3 mb-4">
          <% if(locals.todo) { %> 
              <% todo.forEach(function(item) { %>
              <li class="card card-body">
                  <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                  <label class="form-check-label text-white strikethrough" for="flexCheckDefault">
                      <%= item %>
                  </label>
                </div>
                <hr>
              </li>    
              <% }); %>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</section>
  <script src="/script.js"></script>

<%- include("partials/footer.ejs") %>
  
